# OpenAI API 설정
OPENAI_API_KEY=sk-your-api-key-here

# 서버 설정
HOST=0.0.0.0
PORT=8000
# CORS: 운영에서는 구체적 origin만 (예: https://yourapp.com). "*"는 개발용.
# CORS_ALLOWED_ORIGINS=*

# 로깅 설정
LOG_LEVEL=INFO

# AI 모델 설정
DEFAULT_MODEL=gpt-5-nano
MAX_TOKENS=100
TEMPERATURE=0.8

# 질문 생성 설정
MAX_QUESTION_LENGTH=100

# 프로필 갱신 설정 (선택적, 기본값 사용 가능)
PROFILE_DECAY=0.9
PROFILE_CATEGORY_GAIN=0.25
PROFILE_TAG_GAIN=0.15
PROFILE_TONE_GAIN=0.1
PROFILE_TABOO_THRESHOLD=0.6
PROFILE_TABOO_PENALTY=0.2
PROFILE_ALPHA_LENGTH=0.5
PROFILE_TOP_N_PRUNE=10
